{
  "name": "kc-selenium-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha \"test/**/*.test.js\"",
    "test:amazon": "mocha \"test/amazon/**/*.test.js\"",
    "test:smoke": "mocha \"test/smoke/**/*.test.js\"",
    "test:target": "mocha \"test/target/**/*.test.js\"",
    "test:walmart": "mocha \"test/walmart/**/*.test.js\"",
    "test:bestbuy": "mocha \"test/bestbuy/**/*.test.js\"",
    "test:ebay": "mocha \"test/ebay/**/*.test.js\"",
    "test:amazon:report": "mocha \"test/amazon/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:smoke:report": "mocha \"test/smoke/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:target:report": "mocha \"test/target/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:walmart:report": "mocha \"test/walmart/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:bestbuy:report": "mocha \"test/bestbuy/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:ebay:report": "mocha \"test/ebay/**/*.test.js\" --reporter mocha-multi-reporters --reporter-options configFile=mocha-reporter-config.json",
    "test:amazon:junit": "mocha \"test/amazon/**/*.test.js\" --reporter mocha-junit-reporter --reporter-options mochaFile=reports/junit.xml,quiet=true",
    "test:amazon:html": "mocha \"test/amazon/**/*.test.js\" --reporter mochawesome --reporter-options reportDir=reports,reportFilename=amazon-report,quiet=true",
    "test:smoke:junit": "mocha \"test/smoke/**/*.test.js\" --reporter mocha-junit-reporter --reporter-options mochaFile=reports/junit.xml,quiet=true",
    "test:smoke:html": "mocha \"test/smoke/**/*.test.js\" --reporter mochawesome --reporter-options reportDir=reports,reportFilename=smoke-report,quiet=true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "chai": "^6.2.1",
    "dotenv": "^17.2.3",
    "mocha": "^11.7.5",
    "selenium-webdriver": "^4.39.0"
  },
  "devDependencies": {
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^7.1.4"
  }
}
